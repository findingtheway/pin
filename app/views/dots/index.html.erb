<h1>Listing dots</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dots.each do |dot| %>
      <tr>
        <td><%= image_tag dot.image.url (:medium) %></td>
        <td><%= dot.description %></td>
        <td><%= dot.user.email if dot.user %></td>
        <td><%= link_to 'Show', dot %></td>
        <% if dot.user == current_user %>
        <td><%= link_to 'Edit', edit_dot_path(dot) %></td>
        <td><%= link_to 'Destroy', dot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Dot', new_dot_path %>
<% end %>
